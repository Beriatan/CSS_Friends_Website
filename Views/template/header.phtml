     */
    function xmlhttprequest(url, methodType){
        let xhr = new XMLHttpRequest();
        xhr.onload = function() {
            if(xhr.status == 200) {
                return xhr.responseText;
            }
        }
        xhr.open(methodType, url , true);
        xhr.send();
    }

